<!DOCTYPE html>
<!--[if lt IE 7]> <html class="no-js ie6 oldie" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js ie7 oldie" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js ie8 oldie" lang="en"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" lang="en">
<!--<![endif]-->
<head>

    <!-- Basic Page Needs
  =============================================== -->
    <meta charset="utf-8">

    <!-- Page Titles
  =============================================== -->
    <title>@ViewBag.Title</title>

    <!-- Mobile Specific 
  =============================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Stylesheets 
  =============================================== -->
    <link rel="stylesheet" href="/Content/style.css">
    <link rel="stylesheet" href="/Content/plugins.css">
    <link rel="stylesheet" type="text/css" href="/Content/colors/blue.css" media="screen">
    <link rel="stylesheet" href="/Content/responsive.css">

    <!--  WebFont 
  =============================================== -->
    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic|Raleway:600" rel="stylesheet" type="text//Content">

    <!-- Modernizr
  =============================================== -->
    <script type="text/javascript" src="~/Scripts/modernizr.js"></script>

    @RenderSection("header", required: false)

    <style type="text/css">
        #candb-logo a {
            line-height: 2;
            font-weight: 900;
            font-size: 22px;
            color: black;
            font-family: Lato, Helvetica, Arial, sans-serif;
        }

        #candb-logo a span.gold {
            color: gold;
        }
    </style>
</head>
<body>

    <!-- Start Wrapper -->
    <div id="wrapper">

        <!-- Start Header Wrapper -->
        <div class="header-wrapper header-alt2 blue-grad">

            <!-- Start Header -->
            <header id="header" class="half-bottom">

                <!-- Start Logo-->
                <section id="top" class=" container row">

                    <!-- Logo -->
                    <div class="columns three">
                        <!-- 3 Columns -->
                        <div id="candb-logo">
                            <a href="#">Checks & <span class="gold">Balances</span></a>
                        </div>
                        <div class="social">
                            <a href="https://twitter.com/checksnbalances" class="social-icons-mini dark color twitter tooltips" title="Twitter">Twitter</a>
                            @*<a href="#" class="social-icons-mini dark color facebook tooltips" title="Facebook">Facebook</a>*@
                            @*<a href="#" class="social-icons-mini dark color rss tooltips" title="RSS Feed">RSS Feed</a>*@
                        </div>
                    </div>

                    <!-- 9 Columns -->
                    <div class="columns nine">

                        <!-- Shadow Effect -->
                        <div class="curved-shadow">

                            <!-- Start Main Navigation -->
                            <nav id="main-nav" class="nav2">

                                <!-- Dropdown Menu -->
                                <ul class="sf-menu">
                                    <li>
                                        <a href="javascript:void(0);" class="@(ViewBag.Title.Contains("Home") ? "active" : "")">Home</a>
                                        <ul>
                                            <li>@Html.RouteLink("Home", "Default", new { @controller = "Home", @action = "Index" })</li>
                                            <li>@Html.RouteLink("Choose State", "Default", new { @controller = "Home", @action = "ChooseState" })</li>
                                        </ul>
                                    </li>

                                    <li>
                                        @Html.RouteLink("Players Page", "Default", 
                                            new 
                                            { 
                                                @controller = "PlayersPage", 
                                                @action = "Index", 
                                                @state = ViewBag.CurrentState ?? ChecksAndBalances.Data.Models.Enum.State.DC 
                                            }, 
                                            new { @class = ViewBag.Title.Contains("Players Page") ? "active" : "" })
                                        <ul></ul>
                                    </li>

                                    <li>
                                        @Html.RouteLink("Archive", "Default", 
                                            new 
                                            { 
                                                @controller = "Article", 
                                                @action = "Index", 
                                                @state = ViewBag.CurrentState ?? ChecksAndBalances.Data.Models.Enum.State.DC 
                                            }, 
                                            new { @class = ViewBag.Title.Contains("Archive") ? "active" : "" })
                                        <ul></ul>
                                    </li>

                                    <li>
                                        <a href="javascript:void(0);" class="@(ViewBag.Title.Contains("Info") ? "active" : "")">Info</a>
                                        <ul>
                                            <li>@Html.RouteLink("About", "Default", new { @controller = "Home", @action = "Index" })</li>
                                            <li>@Html.RouteLink("Contact", "Default", new { @controller = "Home", @action = "Index" })</li>
                                        </ul>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);" 
                                            class="@(ViewBag.Title.Contains("Account") ? "active" : "")">Account</a>
                                        <ul>
                                            @if(Request.IsAuthenticated)
                                            {
                                                <li>@Html.RouteLink("Settings", "Default", new { @controller = "Account", @action = "Manage" })</li>
                                                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                                            }
                                            else
                                            {
                                                <li>@Html.RouteLink("Sign In", "Default", new { @controller = "Account", @action = "Login" })</li>
                                                <li>@Html.RouteLink("Sign Up", "Default", new { @controller = "Account", @action = "Register" })</li>
                                            }
                                        </ul>
                                    </li>
                                    @if(User.IsInRole("Administrator")) {
                                        <li>
                                            <a href="javascript:void(0);"
                                                class="@(ViewBag.Title.Contains("Admin") ? "active" : "")">Admin</a>
                                            <ul>
                                                <li>@Html.RouteLink("Article Management", "Admin_default", new { @controller = "Article", @action="Index" }, new { })
                                                <li>@Html.RouteLink("Ad Management", "Admin_default", new { @controller = "Advertisement", @action = "Index" }, new { })
                                            </ul>
                                        </li>
                                    }
                                </ul>

                                <!--  Search Bar -->
                                <form action="#" class="nav-search">
                                    <input type="text">
                                </form>

                            </nav>
                            <!-- End Main Navigation -->

                        </div>
                        <!-- Shadow Effect -->

                    </div>
                    <!-- End 9 Columns -->

                </section>
                <!-- End Top -->

            </header>
            <!-- End Header -->
            <div class="header-filler"></div>
        </div>
        <!-- End Header Wrapper -->

        <div class="row">
            @RenderSection("sectionTitle", required: false)
        </div>

        @RenderBody()

        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
        }

        <!-- Start Footer -->
        <footer id="footer">
            <div class="footer-wrap">

                <!-- Start Footer Widget -->
                <div class="footer-widgets container half-top">

                    <!-- Start Footer Widget Item -->
                    <div class="columns one-third first">
                        <h4>About Us</h4>
                        <div class="widget-content">

                            <ul class="widget-contact-info">
                                <li class="phone">Phone: 651 270 7275</li>
                                <li class="mail">E-mail: mn.editor@checksandbalances.com</li>
                            </ul>

                        </div>
                    </div>
                    <!-- End Footer Widget Item -->

                    <!-- Start Footer Widget Item -->
                    <div class="columns one-third">
                        <h4>&nbsp;</h4>
                        <div class="widget-content">
                            <img src="/Content/Images/world-map-bg.png" alt="World Location">
                        </div>
                    </div>
                    <!-- End Footer Widget Item -->

                    <!-- Start Footer Widget Item -->
                    <div class="columns one-third">
                        <h4>Latest Tweet</h4>
                        <div id="tweets" class="widget-content">
                        </div>
                    </div>
                    <!-- End Footer Widget Item -->

                </div>
                <!-- End Footer Widget -->
            </div>
        </footer>
        <!-- End Footer -->

        <!-- Start Footer Copy -->
        <div class="footer-copy">
            <div class="container">

                <p class="align-center">
                    &copy; Copyright @DateTime.Today.Year
                </p>

            </div>
        </div>
        <!-- End Footer Copy-->

    </div>
    <!-- End Wrapper -->

    <!-- Javascripts
  =============================================== -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script>window.jQuery || document.write('<script src="/Scripts/jquery-1.8.2.min.js"><\/script>')</script>
    <script type="text/javascript" src="~/Scripts/jquery-ui.custom.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.easing.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.flexslider-min.js"></script>
    <script type="text/javascript" src="~/Scripts/camera.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.cslider.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.touchSwipe.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.caroufredsel.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.isotope.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.tipsy.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.zflickrfeed.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.fitvid.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.fancybox.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.timeago.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.tweetable.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.hoverIntent.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.superfish.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.countdown.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.easy-pie-chart.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.gmap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/omnibiz-custom.js"></script>

    @RenderSection("footer", required: false)
</body>
</html>
